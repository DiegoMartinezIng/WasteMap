<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OpcionActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="183dp"
        android:layout_height="252dp"
        android:layout_marginTop="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wc_logo" />

    <Button
        android:id="@+id/btnAprendeReciclar"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickAprendeReciclar"
        android:singleLine="false"
        android:text="@string/aprende_a_reciclar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUbicacion" />

    <Button
        android:id="@+id/btnNotas"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:lines="2"
        android:onClick="onClickNotas"
        android:singleLine="false"
        android:text="@string/notas"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAprendeReciclar"
        app:layout_constraintTop_toBottomOf="@+id/btnPuntosReciclaje" />

    <Button
        android:id="@+id/btnPuntosReciclaje"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginTop="84dp"
        android:lines="2"
        android:onClick="onClickPuntoReciclaje"
        android:singleLine="false"
        android:text="@string/puntos_reciclajes"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/btnUbicacion"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUbicacion"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="84dp"
        android:onClick="onClickUbicaion"
        android:text="@string/ubicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>